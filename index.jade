mixin code()
  .presentation-example
    block
  pre
    - var oldBuf = buf;
    - buf = [];
    block
    - buf  = oldBuf.concat(buf.map(jade.escape));
doctype html
html(lang="en")
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0, maximum-scale=1.0')
    title KCO UI Toolkit
    
    link(rel='stylesheet' href='ui-toolkit.css')
    link(rel='stylesheet' href='support/doc.css')
      
    script(type='text/javascript' src='ui-toolkit.js')

  body
    
    nav
      .inner
        a(href='#home') 
          span.ss-pika.ss-home
        a(href='#buttons') Buttons
        a(href='#headers') Headers
        a(href='#form') Form
        a(href='#links') Links
        a(href='#icons') Icons
        a(href='#logos') Logos
        a(href='#misc') Misc
    
    #home.main
      h2#buttons.presentation Buttons
      
      h3 Highlighted button
      +code() 
        include snippets/button--highlighted.html
      
      
      h3 Non highlighted button        
      +code()
        include snippets/button--non-highlighted.html
      
      
      h3 Buy button
      +code()
        include snippets/buy-button.html


      p Loading
      +code()
        include snippets/buy-button--loading.html
        

      p Disabled
      +code()
        include snippets/buy-button--disabled.html



      h2#headers.presentation Headers
      
      h3 Main Header
      +code()
        include snippets/main-header.html
          
      
      h3 Subtle Header
      +code()
        include snippets/subtle-header.html

      
      
      h2#form.presentation Form elements
      
      h3 Checkbox
      +code()
        include snippets/checkbox.html

      +code()
        include snippets/checkbox--checked.html
      
      
      h3 Input
      +code()
        include snippets/field.html

      p Disabled
      +code()
        include snippets/field--disabled.html

      p With icon
      +code()
        include snippets/field--with-icon.html

      p With separators
      +code()
        include snippets/field--with-separators.html

      p With tooltip
      +code()
        include snippets/field--with-tooltip.html
      
      script.
        UIToolkit.tooltip(document.querySelector('.cui__field-tooltip__button'));
      
      p Error in the data
      +code()
        include snippets/field--invalid.html
      
      script.
        var cuiEditorWrappers = document
          .querySelectorAll(
            '.cui__editor-wrapper, .cui__editor-wrapper--with-icon');
        var cuiEditors = document
          .querySelectorAll(
            '.cui__editor--text, .cui__editor--with-icon');
        
        for (var i = 0; i < cuiEditorWrappers.length; i ++) {
          UIToolkit.fakePlaceholders(cuiEditors[i], cuiEditorWrappers[i]);
        }  
          
      
      h3 Select
      +code()
        include snippets/select.html
      
      p With separators
      +code()
        include snippets/select--with-separators.html
      
      
      h3 Label
      +code()
        include snippets/label.html
      
      
      
      h2#links.presentation Links
      
      p Highlighted
      +code()
        include snippets/link--highlighted.html


      p Non highlighted
      +code()
        include snippets/link--non-highlighted.html


      p Non highlighted, standalone
      +code()
        include snippets/link--non-highlighted--standalone.html
      
      
      
      h2#icons.presentation Icons
      
      h3 SS Pika Icon
      +code()
        include snippets/icon--ss-pika.html
        
        
        
      h2#logos.presentation Logos
      
      h3 Card logos
      +code()
        include snippets/logos--cards.html
        
        
        
      h2#misc.presentation Misc
      
      h3 Tooltip icon      
      +code()
        include snippets/tooltip.html
      
      p Inline
      +code()
        include snippets/tooltip--inline.html
      
      h3 Loader
      +code()
        include snippets/loader.html

      h3 Bubble
      +code()
        include snippets/bubble.html
